<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubirGarito">

    <TextView
        android:id="@+id/tvSubir"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:textSize="28dp"
        android:layout_height="wrap_content"
        android:text="Sube tu Garito" />

    <EditText
        android:id="@+id/etNombreG"
        android:layout_width="wrap_content"
        android:layout_below="@+id/tvSubir"
        android:layout_marginTop="56dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_edt"
        android:paddingStart="10dp"
        android:ems="10"
        android:inputType="text"
        android:hint="Nombre del Garito" />


    <TextView
        android:id="@+id/tvHoraApertura"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edt"
        android:paddingStart="10dp"
        android:layout_below="@+id/etNombreG"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:hint="Selecciona una hora de Apertura" />

    <TextView
        android:id="@+id/tvHoraCierre"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_edt"
        android:paddingStart="10dp"
        android:layout_below="@+id/tvHoraApertura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Seleciona una hora de Cierre " />

    <EditText
        android:id="@+id/etDescripcion"
        android:layout_below="@+id/tvHoraCierre"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/custom_edt"
        android:paddingStart="10dp"
        android:layout_height="150dp"
        android:hint="Escribe una descripcion"
        android:inputType="text|textMultiLine"
        android:gravity="top"/>
    <Button
        android:id="@+id/btnMapa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="500dp"
        android:text="Ir al Mapa" />

    <Button
        android:id="@+id/btnGuardar"
        android:layout_width="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btnMapa"
        android:layout_marginTop="20dp"
        android:layout_height="wrap_content"
        android:text="Guardar Garito" />
</RelativeLayout>